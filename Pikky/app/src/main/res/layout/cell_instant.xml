<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cinstAvatarImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/default_avatar"/>

    <TextView
        android:id="@+id/cinstUsernameTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cinstAvatarImg"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/cinstAvatarImg"
        android:maxLines="1"
        android:singleLine="true"
        android:text="•••"
        android:textColor="#333"
        android:textSize="12sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/cinstLastMessageTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cinstUsernameTxt"
        android:layout_below="@+id/cinstUsernameTxt"
        android:layout_marginTop="5dp"
        android:text="Last Message:"
        android:textSize="12sp"/>


</RelativeLayout>